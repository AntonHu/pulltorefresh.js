{
  "name": "pulltorefreshjs",
  "version": "0.1.7",
  "description": "Pull To Refresh",
  "main": "dist/pulltorefresh.js",
  "scripts": {
    "dev": "tarima -des",
    "lint": "eslint src",
    "build": "tarima -Ufqe dist -x tests",
    "build_min": "yarn build -- -OR '**/*.js:{basedir}/{name}.min.{ext}'",
    "test": "yarn lint && testem ci",
    "dev_test": "testem"
  },
  "author": "Rafael Soto",
  "license": "MIT",
  "tarima": {
    "src": "src",
    "public": ".",
    "dest": ".",
    "rename": [
      "**/*.js:dist/{fullpath/1}",
      "**/demos/**:{fullpath/1}",
      "**/tests/**:{fullpath/1}"
    ],
    "bundle": [
      "**/*.js"
    ],
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6"
      },
      "rollup": {
        "bundle": "PullToRefresh"
      }
    }
  },
  "devDependencies": {
    "buble": "0.14.2",
    "chokidar": "1.6.0",
    "csso": "^3.1.1",
    "eslint": "3.5.0",
    "eslint-config-airbnb-base": "7.1.0",
    "eslint-plugin-import": "1.15.0",
    "google-closure-compiler-js": "^20170521.0.0",
    "less": "2.7.1",
    "pug": "2.0.0-beta6",
    "rollup": "0.36.3",
    "tarima": "^3.6.1",
    "tarima-lr": "^0.3.2"
  }
}
