{
  "before_tests": "npm run build",
  "test_page": "tests/index.html",
  "framework": "qunit",
  "src_files": [
    "dist/*.js",
    "tests/index.html"
  ],
  "serve_files": [
    "dist/pulltorefresh.js",
    "tests/unit/tests.js"
  ],
  "growl": true,
  "launch_in_dev": [
    "Chrome"
  ],
  "launch_in_ci": [
    "Chrome"
  ],
  "browser_args": {
    "Chrome": {
      "dev": [
        "--auto-open-devtools-for-tabs"
      ],
      "ci": [
        "--headless",
        "--disable-gpu",
        "--remote-debugging-port=9222"
      ]
    }
  }
}
